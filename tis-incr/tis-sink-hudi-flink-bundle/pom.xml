<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>tis-incr</artifactId>
        <groupId>com.qlangtech.tis.plugins</groupId>
        <version>3.5.0</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>tis-sink-hudi-flink-bundle</artifactId>
    <packaging>jar</packaging>

    <dependencies>
        <dependency>
            <groupId>org.apache.hudi</groupId>
            <artifactId>hudi-flink-bundle_${scala.binary.version}</artifactId>
            <version>${hudi.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>com.esotericsoftware.kryo</groupId>
                    <artifactId>kryo</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.apache.avro</groupId>
            <artifactId>avro</artifactId>
            <version>1.10.0</version>
            <scope>provided</scope>
        </dependency>

        <!--for StreamerUtil can be compiled-->
        <dependency>
            <groupId>org.apache.flink</groupId>
            <artifactId>flink-core</artifactId>
            <version>${flink.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.hadoop</groupId>
            <artifactId>hadoop-common</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.kafka</groupId>
            <artifactId>kafka-clients</artifactId>
            <version>2.0.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.parquet</groupId>
            <artifactId>parquet-hadoop</artifactId>
            <version>1.12.1</version>
            <scope>provided</scope>
        </dependency>


    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <!--https://maven.apache.org/plugins/maven-shade-plugin/shade-mojo.html-->
                            <createDependencyReducedPom>true</createDependencyReducedPom>
                            <shadedArtifactAttached>false</shadedArtifactAttached>
                            <!--When true, dependencies are kept in the pom but with scope 'provided'; when false, the dependency is removed.-->
                            <keepDependenciesWithProvidedScope>false</keepDependenciesWithProvidedScope>
                            <filters>
                                <filter>
                                    <artifact>org.apache.hudi:hudi-flink-bundle_${scala.binary.version}</artifact>
                                    <!--因为com.esotericsoftware.kryo:kryo:jar:2.24.0:compile 已经在tis-flink-dependency 中依赖到了，为了避免冲突先在这里去掉了-->
                                    <excludes>
                                        <exclude>com/esotericsoftware/**</exclude>
                                        <exclude>org/apache/hudi/util/StreamerUtil*</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <!--                            <relocations>-->
                            <!--                                <relocation>-->
                            <!--                                    <pattern>com.esotericsoftware</pattern>-->
                            <!--                                    <shadedPattern>com.qlangtech.com.esotericsoftware</shadedPattern>-->
                            <!--                                </relocation>-->
                            <!--                                <relocation>-->
                            <!--                                    <pattern>org.apache.flink</pattern>-->
                            <!--                                    <shadedPattern>com.qlangtech.org.apache.flink</shadedPattern>-->
                            <!--                                </relocation>-->
                            <!--                            </relocations>-->
                            <artifactSet>
                                <excludes>
                                    <exclude>org.slf4j:*</exclude>
                                    <exclude>org.apache.logging.log4j:*</exclude>
                                </excludes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>
